# MongoDB connection string
MONGODB_URI=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/?appName=how-i-ate

# JWT configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=90d

# Environment
NODE_ENV=development

# Frontend URL for CORS (supports multiple origins separated by comma)
# Development: http://localhost:4200
# Production: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:4200

# Superadmin password (optional, defaults to SuperAdmin123!)
SUPERADMIN_PASSWORD=SuperAdmin123!

# Port (optional, defaults to 3000)
PORT=3000
